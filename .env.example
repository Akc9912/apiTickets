# Variables de entorno para ApiTickets - Sistema de Gestión de Tickets
# Copia este archivo como .env y configura tus propios valores

# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==============================================
DB_URL=jdbc:mysql://localhost:3306/apiticket?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USER=your_db_user
DB_PASS=your_db_password

# Configuración adicional de JPA/Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false

# ==============================================
# CONFIGURACIÓN JWT Y SEGURIDAD
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_at_least_256_bits_long
JWT_EXPIRATION_MS=36000000
JWT_REFRESH_EXPIRATION_MS=86400000

# ==============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ==============================================
# APP_DEFAULT_PASSWORD=your_default_password  # Opcional: se genera automáticamente si no se define
APP_NAME=API Tickets Management System
APP_VERSION=1.0.0

# Puerto del servidor
SERVER_PORT=8080

# Configuración CORS (dominios permitidos)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# ==============================================
# CONFIGURACIÓN DE LOGS
# ==============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_POO_MIAPI=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG

# ==============================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ==============================================
# Email configuration (si se implementa)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENABLED=false

# ==============================================
# CONFIGURACIÓN DE DESARROLLO/PRODUCCIÓN
# ==============================================
SPRING_PROFILES_ACTIVE=mysql
DEBUG_MODE=true

# Configuración de archivos subidos
FILE_UPLOAD_MAX_SIZE=10MB
FILE_UPLOAD_PATH=uploads/

# ==============================================
# CONFIGURACIÓN DE CACHE (Redis - opcional)
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_ENABLED=false
